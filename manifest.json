{
  "manifest_version": 3,
  "name": "Save your time",
  "version": "1.0",
  "description": "Limit time soon, save ur time!!!",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
      "activeTab",
      "storage"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "html/popup.html"
  },
  "options_page": "html/settings.html",
  "web_accessible_resources": [
      {
          "resources": ["html/*.html","languages/*.json","js/*.js","icons/*.png"],
          "matches": ["<all_urls>"]
      }
  ],
  "content_security_policy": {
      "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["utils.js", "script.js"]
      }
  ]
}